<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Danh sách lịch hẹn | Happy Clinic</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">

  <%- include('partials/adminNavbar') %>

  <div class="max-w-5xl mx-auto mt-8">
    <div class="bg-white shadow-lg rounded-lg overflow-hidden">
      <div class="bg-blue-600 px-6 py-4">
        <h2 class="text-2xl font-semibold text-white">Danh sách lịch hẹn</h2>
      </div>

      <div class="p-6 overflow-x-auto">
        <table class="min-w-full border-collapse border border-gray-300">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 border">Tên</th>
              <th class="px-4 py-2 border">Bác sĩ</th>
              <th class="px-4 py-2 border">Ngày</th>
              <th class="px-4 py-2 border">Giờ</th>
              <th class="px-4 py-2 border">Trạng thái</th>
            </tr>
          </thead>
          <tbody>
            <% appointments.forEach(appt => { %>
              <tr class="hover:bg-blue-50 cursor-pointer" onclick="window.location.href='/admin/appointment/<%= appt._id %>'">
                <td class="px-4 py-2 border"><%= appt.username %></td>
                <td class="px-4 py-2 border"><%= appt.doctor %></td>
                <td class="px-4 py-2 border"><%= new Date(appt.date).toLocaleDateString() %></td>
                <td class="px-4 py-2 border"><%= appt.time %></td>
                <td class="px-4 py-2 border"><%= appt.status %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>

      <div class="p-4 flex justify-end">
        <a href="/" class="bg-gray-500 hover:bg-gray-600 text-white py-2 px-4 rounded">← Quay lại</a>
      </div>
    </div>
  </div>

  <%- include('partials/chatSupport') %>
</body>
</html>
