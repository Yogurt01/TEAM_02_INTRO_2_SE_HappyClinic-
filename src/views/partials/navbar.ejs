    @import url('https://fonts.googleapis.com/css2?family=Sevillana&display=swap');
    
    /* Header with background image */
    .header {
      background-image: url('./../image/horizontal.png');
      background-size: cover;
      background-position: center;
      height: 250px; /* Adjusted height */
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .header h1 {
      font-size: 2.5rem; /* Adjust font size for better fit */
      color: white;
      font-family: 'Sevillana', cursive;
      font-weight: bold;
    }

    /* Add styling for navbar */
    nav {
      background-color: #2C3E50; /* Navbar background color */
    }

    nav ul {
      display: flex;
      justify-content: center;
      list-style: none;
      padding: 10px 0;
      margin: 0;
    }

    nav ul li {
      margin: 0 15px;
    }

    nav ul li a {
      color: white;
      text-decoration: none;
      font-size: 1.2rem;
      font-weight: bold;
      padding: 5px 10px;
      transition: background-color 0.3s;
    }

    nav ul li a:hover {
      background-color: #f15a24; /* Hover effect for navbar items */
      border-radius: 5px;
    }

    /* Footer styling */
    .footer {
      background-color: #2C3E50;
      color: white;
      padding: 20px;
    }

    .footer ul {
      display: flex;
      justify-content: space-evenly;
      list-style: none;
      padding: 0;
    }

    .footer ul li a {
      color: white;
      text-decoration: none;
      transition: color 0.3s;
    }

    .footer ul li a:hover {
      color: #F39C12;
    }

    /* Ensure content isn't hidden under fixed navbar */
    body {
      margin-top: 300px;
    }

  </style>
</head>
