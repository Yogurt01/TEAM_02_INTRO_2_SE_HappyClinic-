<!-- views/profile.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Profile | Happy Clinic</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <!-- Navbar chung -->
  <%- include('partials/navbar') %>

  <div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-lg p-6">
    <h2 class="text-2xl font-semibold mb-6 text-gray-800">Thông tin cá nhân</h2>

    <!-- Hiển thị lỗi hoặc thông báo thành công -->
    <% if (error) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <span><%= error %></span>
      </div>
    <% } %>
    <% if (success) { %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <span><%= success %></span>
      </div>
    <% } %>

    <!-- Form chỉnh sửa thông tin -->
    <form action="/profile/edit" method="POST" class="space-y-4">
      <!-- Username (readonly) -->
      <div>
        <label class="block font-medium text-gray-700">Username</label>
        <input
          type="text"
          name="username"
          value="<%= user.username %>"
          class="mt-1 block w-full border border-gray-300 bg-gray-100 rounded-md px-3 py-2"
          readonly
        />
      </div>

      <!-- Fullname -->
      <div>
        <label class="block font-medium text-gray-700">Họ và tên</label>
        <input
          type="text"
          name="fullname"
          value="<%= user.fullname || '' %>"
          class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
          required
        />
      </div>

      <!-- Email -->
      <div>
        <label class="block font-medium text-gray-700">Email</label>
        <input
          type="email"
          name="email"
          value="<%= user.email || '' %>"
          class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
          required
        />
      </div>

      <!-- Ngày sinh -->
      <div>
        <label class="block font-medium text-gray-700">Ngày sinh</label>
        <input
          type="date"
          name="birth"
          value="<%= user.birth ? new Date(user.birth).toISOString().split('T')[0] : '' %>"
          class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
          required
        />
      </div>

      <!-- Giới tính -->
      <div>
        <label class="block font-medium text-gray-700">Giới tính</label>
        <select
          name="gender"
          class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
          required
        >
          <option value="male"   <%= user.gender === 'male'   ? 'selected' : '' %>>Nam</option>
          <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Nữ</option>
          <option value="other"  <%= user.gender === 'other'  ? 'selected' : '' %>>Khác</option>
        </select>
      </div>

      <!-- Số điện thoại -->
      <div>
        <label class="block font-medium text-gray-700">Số điện thoại</label>
        <input
          type="text"
          name="phone"
          value="<%= user.phone || '' %>"
          class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
          required
        />
      </div>

      <!-- Địa chỉ (nested fields) với placeholder và label rõ ràng -->
      <div>
        <label class="block font-medium text-gray-700 mb-2">Địa chỉ</label>
        <div class="grid grid-cols-1 gap-4">
          <!-- Số nhà -->
          <div>
            <label class="block text-gray-600">Số nhà</label>
            <input
              type="text"
              name="houseNumber"
              placeholder="Ví dụ: 123, 45/2, 1A"
              value="<%= user.address.houseNumber || '' %>"
              class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
              required
            />
          </div>
          <!-- Đường / Thôn / Xóm -->
          <div>
            <label class="block text-gray-600">Đường / Thôn / Xóm</label>
            <input
              type="text"
              name="street"
              placeholder="Ví dụ: Đường Lê Lợi, Thôn 5"
              value="<%= user.address.street || '' %>"
              class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
              required
            />
          </div>
          <!-- Xã / Phường -->
          <div>
            <label class="block text-gray-600">Xã / Phường</label>
            <input
              type="text"
              name="ward"
              placeholder="Ví dụ: Phường Bến Thành"
              value="<%= user.address.ward || '' %>"
              class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
              required
            />
          </div>
          <!-- Quận / Huyện -->
          <div>
            <label class="block text-gray-600">Quận / Huyện</label>
            <input
              type="text"
              name="district"
              placeholder="Ví dụ: Quận 1, Huyện Thuận An"
              value="<%= user.address.district || '' %>"
              class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
              required
            />
          </div>
          <!-- Tỉnh / Thành phố -->
          <div>
            <label class="block text-gray-600">Tỉnh / Thành phố</label>
            <input
              type="text"
              name="city"
              placeholder="Ví dụ: TP. Hồ Chí Minh, Bình Dương"
              value="<%= user.address.city || '' %>"
              class="mt-1 block w-full border border-gray-300 rounded-md px-3 py-2"
              required
            />
          </div>
        </div>
      </div>

      <!-- Nút Lưu thay đổi -->
      <div class="pt-4">
        <button
          type="submit"
          class="bg-blue-500 hover:bg-blue-600 text-white font-medium py-2 px-4 rounded"
        >
          Lưu thay đổi
        </button>
      </div>
    </form>
  </div>
</body>
</html>
