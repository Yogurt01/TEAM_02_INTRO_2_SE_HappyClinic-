<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>FAQs | Happy Clinic</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <% if (user?.role === 'admin') { %>
    <%- include('partials/adminNavbar') %>
  <% } else if (user?.role === 'doctor') { %>
    <%- include('partials/doctorNavbar') %>
  <% } else { %>
    <%- include('partials/patientNavbar') %>
  <% } %>


  <div class="max-w-4xl mx-auto mt-8">
    <div class="bg-white shadow-md rounded-lg p-6">
      <h2 class="text-2xl font-semibold text-blue-600 mb-4">üìö C√¢u h·ªèi th∆∞·ªùng g·∫∑p</h2>

      <% if (error) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
          <%= error %>
        </div>
      <% } %>

      <% if (faqs.length > 0) { 
          const grouped = {};
          faqs.forEach(faq => {
            if (!grouped[faq.category]) grouped[faq.category] = [];
            grouped[faq.category].push(faq);
          });
      %>
        <% for (let category in grouped) { %>
          <div class="mb-6">
            <h3 class="text-xl font-semibold text-gray-700 mb-2 border-b pb-1"><%= category %></h3>
            <ul class="divide-y divide-gray-200">
              <% grouped[category].forEach(faq => { %>
                <li class="py-3">
                  <p class="font-medium text-gray-800"><%= faq.question %></p>
                  <p class="text-gray-600 mt-1"><%= faq.answer %></p>
                </li>
              <% }) %>
            </ul>
          </div>
        <% } %>
      <% } else { %>
        <p class="text-gray-500">Kh√¥ng c√≥ c√¢u h·ªèi n√†o trong h·ªá th·ªëng.</p>
      <% } %>
    </div>
  </div>
  <%- include('partials/chatSupport') %>
</body>
</html>
