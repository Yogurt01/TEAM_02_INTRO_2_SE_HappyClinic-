<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>Hồ sơ bệnh án</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="/styles/availability.css" />
  <style>
    body { font-family: 'Roboto', sans-serif; padding: 0px; }
    .container { display: flex; gap: 20px; }
    .sidebar {
      flex: 0 0 30%;
      background: #f7f7f7;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 5px rgba(0,0,0,0.1);
    }
    .main-content { flex: 1; }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }
    th, td {
      border: 1px solid #ccc;
      padding: 8px;
      vertical-align: top;
    }
    textarea { width: 100%; resize: vertical; }
    .save-btn {
      padding: 6px 12px;
      background-color: #2d89ef;
      color: white;
      border: none;
      cursor: pointer;
    }
    .alert {
      margin-bottom: 10px;
      padding: 8px;
      border-radius: 5px;
    }
    .alert-success { background-color: #d4edda; }
    .alert-danger { background-color: #f8d7da; }
  </style>
</head>
<body>
  <% if (user?.role === 'admin') { %>
    <%- include('partials/adminNavbar') %>
  <% } else if (user?.role === 'doctor') { %>
    <%- include('partials/doctorNavbar') %>
  <% } else { %>
    <%- include('partials/patientNavbar') %>
  <% } %>

  <div class="breadcrumb">
    <a href="/dashboard">TRANG CHỦ</a> &raquo;
    <a href="/availability">QUẢN LÝ HỒ SƠ</a> &raquo;
    <span>HỒ SƠ CHI TIẾT</span>
  </div>

  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h2 style="margin-top: 10px ;border-bottom: 2px solid #3498db; padding-bottom: 5px ;color: #2c3e50; font-size: 25px; font-weight: bold;">Thông tin bệnh nhân</h2>
      <% if (patient) { %>
        <p><strong>Mã BN:</strong> <%= patient.code %></p>
        <p><strong>Họ tên:</strong> <%= patient.fullName || patient.name || 'Không rõ' %></p>
        <p><strong>Ngày sinh:</strong> <%= patient.dob ? new Date(patient.dob).toLocaleDateString() : 'Không rõ' %></p>
        <p><strong>Giới tính:</strong> <%= patient.gender || 'Không rõ' %></p>
        <p><strong>Điện thoại:</strong> <%= patient.phone || 'Không rõ' %></p>
        <p><strong>Email:</strong> <%= patient.email || 'Không rõ' %></p>
        <p><strong>Địa chỉ:</strong> <%= patient.address || 'Không rõ' %></p>
      <% } else { %>
        <p>Không có thông tin bệnh nhân.</p>
      <% } %>
    </div>

    <!-- Main content -->
    <div class="main-content">
      <h2 style="margin-top: 30px ;border-bottom: 2px solid #3498db; padding-bottom: 5px ;color: #2c3e50; font-size: 25px; font-weight: bold;">Hồ sơ bệnh án</h2>

      <% if (message) { %>
        <div class="alert alert-success"><%= message %></div>
      <% } %>
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <% if (records.length === 0) { %>
        <p class="text-gray-600">Không có hồ sơ bệnh án nào.</p>
      <% } else { %>
        <% records.forEach(record => { %>
          <div class="border border-gray-300 rounded p-4 mb-5 bg-white shadow">
            <!--<h3 class="text-lg font-bold text-blue-700 mb-2">Mã lịch hẹn: <%= record.appointmentCode %></h3>-->
            <p><strong>Khoa:</strong> <%= record.department || 'Không rõ' %></p>
            <p><strong>Chẩn đoán:</strong> <%= record.diagnosis || '...' %></p>
            <p><strong>Triệu chứng:</strong> <%= record.symptoms || '...' %></p>
            <p><strong>Ghi chú:</strong> <%= record.note || '...' %></p>

            <% if (record.medicines && record.medicines.length > 0) { %>
              <div class="mt-3">
                <strong>Toa thuốc:</strong>
                <table class="table-auto w-full mt-2 border">
                  <thead class="bg-gray-200">
                    <tr>
                      <th class="border p-1">Tên thuốc</th>
                      <th class="border p-1">Đơn vị</th>
                      <th class="border p-1">Số lượng</th>
                      <th class="border p-1">Cách dùng</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% record.medicines.forEach(med => { %>
                      <tr>
                        <td class="border p-1"><%= med.name %></td>
                        <td class="border p-1"><%= med.unit %></td>
                        <td class="border p-1"><%= med.quantity %></td>
                        <td class="border p-1"><%= med.usage %></td>
                      </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <p class="text-gray-500 mt-2">Không có toa thuốc.</p>
            <% } %>
          </div>
        <% }) %>
      <% } %>
    </div>
  </div>

  <%- include('partials/chatSupport') %>
</body>
</html>
